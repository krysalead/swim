{
  "swagger": {
    "outputDirectory": "./dist",
    "entryFile": "./src/hapi-server.ts",
    "host": "localhost:4000",
    "basePath": "/v1",
    "securityDefinitions": {
      "frontoffice": {
        "type": "apiKey",
        "name": "jwt_token",
        "in": "header"
      }
    }
  },
  "routes": {
    "basePath": "/v1",
    "entryFile": "./src/hapi-server.ts",
    "routesDir": "./src",
    "middleware": "hapi",
    "authenticationModule": "./src/authentication.ts",
    "iocModule": "./src/ioc"
  },
  "ignore": [
    "**/node_modules/**"
  ]
}